{
  "routes": [
    {
      "method": "GET",
      "path": "/children",
      "handler": "child.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/children/count",
      "handler": "child.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/children/:id",
      "handler": "child.findOne",
      "config": {
        "policies": ["global::is-parent"]
      }
    },
    {
      "method": "POST",
      "path": "/children",
      "handler": "child.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/children/:id",
      "handler": "child.update",
      "config": {
        "policies": ["global::is-parent"]
      }
    },
    {
      "method": "DELETE",
      "path": "/children/:id",
      "handler": "child.delete",
      "config": {
        "policies": ["global::is-parent"]
      }
    }
  ]
}
